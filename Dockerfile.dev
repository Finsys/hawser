# Multi-stage Dockerfile for local development
# This builds Hawser from source - no pre-built binary required
FROM golang:1.22-alpine AS builder

WORKDIR /src

# Install git for go mod (some dependencies may need it)
RUN apk add --no-cache git

# Download dependencies first (better caching)
COPY go.mod go.sum ./
RUN go mod download

# Copy source and build
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -trimpath -o /hawser ./cmd/hawser

# Runtime stage - minimal image
FROM alpine:3.19

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache \
    ca-certificates \
    docker-cli \
    docker-cli-compose

# Copy binary from builder
COPY --from=builder /hawser /usr/local/bin/hawser

# Environment variables with defaults
ENV PORT=2376 \
    DOCKER_SOCKET=/var/run/docker.sock \
    HEARTBEAT_INTERVAL=30 \
    REQUEST_TIMEOUT=30 \
    RECONNECT_DELAY=1 \
    MAX_RECONNECT_DELAY=60

# Expose default port
EXPOSE 2376

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
    CMD wget -q --spider http://localhost:${PORT}/_hawser/health || exit 1

# Run as root to access Docker socket (can be changed with --user flag)
ENTRYPOINT ["/usr/local/bin/hawser"]
